<div class="container p-4">
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <form action="/Libros/listalibros" method="post">
                        <div class="form group">
                            <h2>Agregar  Libros</h2>
                        </div>
                        <label for="">Titulo</label>
                        <div class="form-group">
                            <input class="form-control" type="text" name="titulo" id="">
                        </div>
                        <label for="">Fecha Lanzamiento</label>
                        <div class="form-group">
                            <input class="form-control"  type="text" name="fecha_lanzamiento" id="">
                        </div>
                        <label for="">Autor</label>
                         <div class="form-group">
                            <input class="form-control" type="text" name="autor" id="">
                        </div>
                        <label for="">Categoria</label>
                         <div class="form-group">
                            <input class="form-control" type="text" name="categoria" id="">
                        </div>
                        <label for="">Editorial</label>
                         <div class="form-group">
                            <input class="form-control" type="text" name="editorial" id="">
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-warning btn-block">Agregar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
<div class="col-md-8"> 
    <div class="card-body">
        <h1>Datos Tabla Libros</h1>
       <table id="example" class="table">
        <thead>
        <tr>
            <th scope="col">id_Libro</th>
            <th scope="col">Titulo</th>
            <th scope="col">Fecha Lanzamiento</th>
            <th scope="col">Autor</th>
            <th scope="col">Categoria</th>
            <th scope="col">Editorial</th>
        </tr>
    </thead>
    <tbody>
        {{#each Libro}}
        <tr>
            <th scope="row">{{id_Libro}}</th>
            <td>{{titulo}}</td>
            <td>{{fecha_lanzamiento}}</td>
            <td>{{autor}}</td>
            <td>{{categoria}}</td>
            <td>{{editorial}}</td>
            <td>

                <a href="eliminar/{{id_Libro}}" class="btn btn-danger">Eliminar</a>
                <a href="" class="btn btn-info">Modificar</a>
                
            </td>
        </tr>
      {{/each}}  
    </tbody>
    </table>
    </div>
    </div>
    </div>
    </div>

    
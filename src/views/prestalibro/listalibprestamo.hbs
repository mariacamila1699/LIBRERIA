<div class="container p-4">
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <form action="/prestalibro/listalibprestamo" method="post">
                        <div class="form group">
                            <h2>Agregar  Prestamos Libros</h2>
                        </div>
                        <label for="">id_usuario</label>
                        <div class="form-group">
                            <input class="form-control" type="text" name="id_usuario" id="">
                        </div>
                        <label for="">id_Libro</label>
                        <div class="form-group">
                            <input class="form-control"  type="text" name="id_libro" id="">
                        </div>
                        <label for="">fecha_salida</label>
                         <div class="form-group">
                            <input class="form-control" type="text" name="fecha_salida" id="">
                        </div>
                        <label for="">fecha_entrada</label>
                         <div class="form-group">
                            <input class="form-control" type="text" name="fecha_entrada" id="">
                        </div>
                        
                        <div class="form-group">
                            <button type="submit" class="btn btn-warning btn-block">Agregar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
<div class="col-md-8"> 
    <div class="card-body">
        <h1>Datos Tabla Prestamos</h1>

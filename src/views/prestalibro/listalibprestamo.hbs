            <td>{{fecha_entrada}}</td>
            
            <td>

                <a href="eliminar/{{id_prestamos}}" class="btn btn-danger">Eliminar</a>
                <a href="" class="btn btn-info">Modificar</a>
                
            </td>
        </tr>
      {{/each}}  
    </tbody>
    </table>

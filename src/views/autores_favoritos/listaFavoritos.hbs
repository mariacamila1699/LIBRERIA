<div class="container p-4">
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <form action="/autores_favoritos/listaFavoritos" method="post">
                        <div class="form group">
                            <h2>Agregar  Autores Favoritos</h2>
                        </div>
                        <label for="">Nombre Autor</label>
                        <div class="form-group">
                            <input class="form-control" type="text" name="nombre" id="">
                        </div>
                        <label for="">Nacionalidad</label>
                        <div class="form-group">
                            <input class="form-control"  type="text" name="nacionalidad" id="">
                        </div>
                        <label for="">Idiomar</label>
                         <div class="form-group">
                            <input class="form-control" type="text" name="idioma" id="">
                        </div>
                        <label for="">Libro Destacado</label>
                         <div class="form-group">
                            <input class="form-control" type="text" name="libro_destacado" id="">
                        </div>
                        
                        <div class="form-group">
                            <button type="submit" class="btn btn-warning btn-block">Agregar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
<div class="col-md-8"> 
    <div class="card-body">
        <h1>Datos Tabla Autores Favoritos</h1>
       <table id="example" class="table">
        <thead>
        <tr>
            <th scope="col">id_favoritos</th>
            <th scope="col">nombre_autor</th>
            <th scope="col">nacionalidad</th>
            <th scope="col">idioma</th>
            <th scope="col">libro_destacado</th>
            
        </tr>
    </thead>
    <tbody>
        {{#each favoritos}}
        <tr>
            <th scope="row">{{id_favoritos}}</th>
            <td>{{nombre}}</td>
            <td>{{nacionalidad}}</td>
            <td>{{idioma}}</td>
            <td>{{libro_destacado}}</td>
            
            <td>

                <a href="eliminar/{{id_favoritos}}" class="btn btn-danger">Eliminar</a>
                <a href="" class="btn btn-info">Modificar</a>
                
            </td>
        </tr>
      {{/each}}  
    </tbody>
    </table>
    </div>
    </div>
    </div>
    </div>
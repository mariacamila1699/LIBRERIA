<div class="container p-4">
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <form action="/usuarios/listaUsuarios" method="post">
                        <div class="form group">
                            <h2>Agregar Usuarios</h2>
                        </div>
                        <label for="">Nombre</label>
                        <div class="form-group">
                            <input class="form-control" type="text" name="nombre" id="">
                        </div>
                        <label for="">Apellido</label>
                        <div class="form-group">
                            <input class="form-control"  type="text" name="apellido" id="">
                        </div>
                        <label for="">Telefono</label>
                         <div class="form-group">
                            <input class="form-control" type="text" name="telefono" id="">
                        </div>
                        <label for="">Direccion</label>
                         <div class="form-group">
                            <input class="form-control" type="text" name="direccion" id="">
                        </div>
                        <label for="">Correo</label>
                         <div class="form-group">
                            <input class="form-control" type="text" name="correo" id="">
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-warning btn-block">Agregar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
<div class="col-md-8"> 
    <div class="card-body">
        <h1>Datos Tabla Usuarios</h1>
       <table id="example" class="table">
        <thead>
        <tr>
            <th scope="col">id_usuario</th>
            <th scope="col">nombre</th>
            <th scope="col">apellido</th>
            <th scope="col">telefono</th>
            <th scope="col">direccion</th>
            <th scope="col">correo</th>
        </tr>
    </thead>
    <tbody>
        {{#each cliente}}
        <tr>
            <th scope="row">{{id_usuario}}</th>
            <td>{{nombre}}</td>
            <td>{{apellido}}</td>
            <td>{{telefono}}</td>
            <td>{{direccion}}</td>
            <td>{{correo}}</td>
            <td>

                <a href="eliminar/{{id_usuario}}" class="btn btn-danger">Eliminar</a>
                <a href="" class="btn btn-info">Modificar</a>
                
            </td>
        </tr>
      {{/each}}  
    </tbody>
    </table>
    </div>
    </div>
    </div>
    </div>
